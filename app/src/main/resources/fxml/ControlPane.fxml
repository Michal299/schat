<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="pl.edu.pg.eti.gui.controller.ControlPaneController">

    <Button text="New" styleClass="control-button" onAction="#handleNewMessageButtonClick"/>
    <Button text="Con" styleClass="control-button" onAction="#handleShowContactsButtonClick"/>
    <Button text="Set" styleClass="control-button" onAction="#handleSettingsButtonClick"/>
    <Button text="Close" styleClass="control-button" onAction="#handleCloseButtonClick"/>

    <stylesheets>
        <URL value="@../style/control_pane.css"/>
    </stylesheets>
</VBox>
