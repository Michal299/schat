<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="pl.edu.pg.eti.gui.controller.LoginController"
      prefHeight="400.0" prefWidth="600.0">

    <Label text="SChat Login"/>
    <Label fx:id="statusLabel"/>
    <TextField fx:id="loginField" promptText="login"/>
    <PasswordField fx:id="passwordField" promptText="password"/>
    <Button fx:id="loginButton" text="Log in" onAction="#loginButton"/>
    <Button fx:id="initButton" text="Initialize user" onAction="#initButton"/>
</VBox>
