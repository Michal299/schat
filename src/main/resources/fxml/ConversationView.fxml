<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="pl.edu.pg.eti.gui.controller.ConversationController"
           prefHeight="400.0" prefWidth="600.0">

    <VBox fx:id="container">
        <Label fx:id="statusInfo"/>
        <HBox fx:id="selectContact">
            <ComboBox fx:id="contactsBox" promptText="Choose contact"/>
            <Button text="Accept" onAction="#handleAcceptContactButton"/>
        </HBox>
        <ListView fx:id="messagesList" styleClass="messageList"/>
        <HBox>
            <ProgressBar fx:id="sendingProgress"/>
            <Label fx:id="sendingStatus"/>
        </HBox>
        <HBox>
            <TextArea fx:id="messageContent" promptText="Message content" />
            <Button text="File" onAction="#selectFileToSend"/>
            <Button text="Send" onAction="#handleSendButtonClick"/>
            <Button text="Remove file" onAction="#removeChosenFile"/>
            <Label fx:id="chosenFile"/>
        </HBox>
    </VBox>
    <stylesheets>
        <URL value="@../style/conversationView.css"/>
    </stylesheets>

</StackPane>
